script(type="text/ng-template", id="changeskills")
    ion-view(view-title="Skills")
        ion-content
            .list(ng-repeat="(prof, profSkills) in allSkills")
                .item.item-divider {{prof}}
                .item(ng-repeat="skill in profSkills", ng-click="openSkillInfo(skill)")
                    .row.padding-0
                        .col.padding-0
                            span {{skill.spellName}}
                            span &nbsp;
                            small.italic.subdued Level {{skill.spellLevel}}
                        .col.padding-0.text-right
                            span(ng-if="countNumTimesSkillSet(skill.spellName) > 0")
                                i.icon.ion-star
                                | &nbsp;
                                | {{countNumTimesSkillSet(skill.spellName)}}