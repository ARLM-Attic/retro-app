script(type="text/ng-template", id="changeclass")
    ion-view(view-title="Change Class")
        ion-content
            div.card(ng-repeat="prof in player.unlockedProfessions | orderBy:'toString()'")
                div.item.item-divider
                    h2
                        span {{prof}} (level {{player.professionLevels[prof] || 1}})
                        span.float-right
                            button.button.button-small(
                                blocked-by="Player",
                                ng-click="ClassChangeFlow.change(prof)",
                                ng-if="prof !== player.profession")
                                i.icon.game-icon.game-icon-gear-swap
                            button.button.button-small(disabled, ng-if="prof === player.profession")
                                i.icon.game-icon.game-icon-item-tier-1
                div.item.item-body
                    div.row
                        div.col {{CLASSES[prof]}}